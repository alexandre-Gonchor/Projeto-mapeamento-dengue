generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Adicione este bloco acima do seu modelo 'Registro'
enum Status {
  suspeito
  confirmado
  resolvido
}

model Registro {
  id          Int      @id @default(autoincrement())
  tipo        String
  status      Status   @default(suspeito) // ALTERADO: Usa o enum Status
  descricao   String?
  fotoUrl     String?
  localizacao String
  createdAt   DateTime @default(now())
}
